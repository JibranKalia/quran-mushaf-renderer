<!-- Navigation -->
<nav class="flex justify-center items-center gap-4 mb-5">
  <a href="/mushaf/<%= @mushaf_id %>/page/<%= @page_number + 1 %>" 
     class="px-5 py-2.5 bg-blue-500 text-white no-underline rounded hover:bg-blue-600 transition-colors">
    → السابق
  </a>
  <span class="font-medium text-gray-700">
    الصفحة <%= @page_number %> - <%= @mushaf['mushaf_name'] %>
  </span>
  <a href="/mushaf/<%= @mushaf_id %>/page/<%= @page_number - 1 %>" 
     class="px-5 py-2.5 bg-blue-500 text-white no-underline rounded hover:bg-blue-600 transition-colors">
    التالي ←
  </a>
</nav>

<!-- Main Content -->
<main class="mushaf <%= @mushaf['code'] %> bg-white p-5 max-w-4xl mx-auto shadow-lg rounded-lg text-center">
  <div class="page-wrapper inline-block text-right">
    <div id="page-<%= @page_number %>" class="page text-3xl leading-loose">
      <% @lines.each do |line| %>
        <% next if line['line_type'].nil? || line['line_type'].empty? %>
        
        <div class="line-container mb-2.5" data-line="<%= line['line_number'] %>">
          <div class="line <%= 'line--center' if line['is_centered'] == 1 %> <%= "line--#{line['line_type'].gsub('_', '-')}" %>">
            
            <% case line['line_type'] %>
            <% when 'surah_name' %>
              <% if line['surah_number'] && chapter = Chapter.find(line['surah_number']) %>
                <div class="surah-name relative h-20 flex justify-center items-center">
                  <div class="quran-icon surah-header">header</div>
                  <div class="surah-icon absolute flex items-center text-5xl">
                    <span class="surah-name-v4-icon ml-2">
                      surah<%= line['surah_number'].to_s.rjust(3, '0') %>
                    </span>
                    <span class="surah-name-v4-icon">surah-icon</span>
                  </div>
                </div>
              <% end %>
              
            <% when 'basmallah' %>
              <div class="bismillah-font text-4xl text-center">
                ﷽
              </div>
              
            <% when 'ayah' %>
              <% words = Word.find_range(@mushaf, line['first_word_id'], line['last_word_id']) %>
              <% current_ayah = nil %>
              <% words.each_with_index do |word, index| %><%
                  if word['ayah'] != current_ayah
                    if current_ayah %></div></div><%
                    end
                    current_ayah = word['ayah'] %><div class="ayah-container"><div class="ayah" data-ayah="<%= word['surah'] %>:<%= word['ayah'] %>"><%
                  end
                %><span class="char char-word <%= 'text-red-500' if word['text']&.match?(/[\u06DD]/) %>" id="word-<%= word['id'] %>" data-location="<%= word['location'] %>"><%= word['text'] %></span><%
                end %>
              <% if words.any? %>
                </div></div>
              <% end %>
            <% end %>
            
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<!-- Bottom Navigation -->
<nav class="flex justify-center items-center gap-4 mt-5">
  <a href="/mushaf/<%= @mushaf_id %>/page/<%= @page_number + 1 %>" 
